extends layout

block append body
    .container.theme-showcase(role='main')

        script(src='/encrypt.js', type='text/javascript')

    .jumbotron
        form.form-horizontal(action="/users/login", method="post")
            div
                label= "Username:"
                input(type="text", name="username")
            div
                label= "Password:"
                input(type="password", name="password" id="password")
            div
                input(type="submit", class="btn btn-primary" value="Log In" onclick='encryptPassword()')
            div
                a(href="/users/signUp") Register Here
