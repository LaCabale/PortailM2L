extends layout

block append body
    .container.theme-showcase(role='main')

        .jumbotron
            h3  Ici vous inscrivez les frais de deplacement effectué
        .page-header


        .lead

            form.form-horizontal(id="formFrais", action="/frais/verification", method="post")
                div
                    label= "Motifs de déplacement :"
                    input(type="text", name="motif")
                div
                    label="Date du déplacement : "
                    input(type="date", name="date")
                div
                    label= "Ville de départ :"
                    input(type="text", name="villeD")
                div
                    label= "Ville d'arrivé :"
                    input(type="text", name="villeA")
                div
                    label= "Km parcourus :"
                    input(type="text", name="parcourus")
                div
                    input(type="submit", value="Valider", name="valider", id="validButton")


            script.
                $(document).ready(function() {
                    $("#validButton").click(function () {
                        $('#formFrais').validate({
                            rules: {
                                "motif": {
                                    "required": true
                                },
                                "date": {
                                    "required": true
                                },
                                "villeD": {
                                    "required": true
                                },
                                "villeA": {
                                    "required": true
                                },
                                "parcourus": {
                                    "required": true
                                }
                            },
                            messages: {
                                "motif": "Veuillez fournir un motif",
                                "date": "Veuillez fournir une date",
                                "villeD": "Veuillez renseigner une ville de départ",
                                "villeA": "Veuillez renseigner une ville d'arrivée",
                                "parcourus": "Veuillez renseigner la distance parcourue"
                            }
                        });
                    });
                });